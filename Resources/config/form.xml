<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_twitter.form.options.type.class">Integrated\Bundle\SocialBundle\Form\Type\TokenType</parameter>
        <parameter key="integrated_facebook.form.facebook.type.class">Integrated\Bundle\SocialBundle\Form\Type\FacebookType</parameter>

    </parameters>

    <services>

        <service id="integrated_twitter.form.options.type" class="%integrated_twitter.form.options.type.class%">
            <tag name="form.type" alias="integrated_twitter_tokens" />
        </service>

        <service id="integrated_facebook.form.facebook.type" class="%integrated_facebook.form.facebook.type.class%">
            <tag name="form.type" alias="integrated_facebook_tokens" />
        </service>

    </services>

</container>